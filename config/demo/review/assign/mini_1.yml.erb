course:
  name: First Mini Physics with Courseware


<%=
  filename = File.join(__dir__, '_assign.yml.erb')
  ERB.new(File.read(filename)).tap { |erb| erb.filename = filename }.result
%>

  task_plans:
    - title: Read 1.1 and 1.2
      type: reading
      book_indices:
        - [0, 0]
        - [0, 1]
      assigned_to:
        - period:
            name: 1st
          opens_at: <%= open_last_monday - 2.weeks %>
          due_at: <%= due_last_monday - 5.days %>
          closes_at: <%= closes_last_monday + 2.days %>
        - period:
            name: 2nd
          opens_at: <%= open_last_monday - 2.weeks %>
          due_at: <%= due_last_monday - 5.days %>
          closes_at: <%= closes_last_monday + 2.days %>
      dropped_questions:
        - question_index: 0
          drop_method: zeroed
        - question_index: 1
          drop_method: full_credit

    - title: Read 1.3 and 1.4
      type: reading
      book_indices:
        - [0, 2]
        - [0, 3]
      assigned_to:
        - period:
            name: 1st
          opens_at: <%= open_last_monday - 1.week %>
          due_at: <%= due_last_monday + 2.days %>
          closes_at: <%= closes_next_monday + 2.days %>
        - period:
            name: 2nd
          opens_at: <%= open_last_monday - 1.week %>
          due_at: <%= due_last_monday + 2.days %>
          closes_at: <%= closes_next_monday + 2.days %>

    - title: HW 1.1 and 1.2
      type: homework
      book_indices:
        - [0, 0]
        - [0, 1]
      assigned_to:
        - period:
            name: 1st
          opens_at: <%= open_last_monday - 2.weeks %>
          due_at: <%= due_last_monday - 3.days %>
          closes_at: <%= closes_last_monday + 4.days %>
        - period:
            name: 2nd
          opens_at: <%= open_last_monday - 2.weeks %>
          due_at: <%= due_last_monday - 3.days %>
          closes_at: <%= closes_last_monday + 4.days %>
      dropped_questions:
        - question_index: 0
          drop_method: full_credit
        - question_index: 1
          drop_method: zeroed

    - title: HW 1.3 and 1.4
      type: homework
      book_indices:
        - [0, 2]
        - [0, 3]
      assigned_to:
        - period:
            name: 1st
          opens_at: <%= open_last_monday - 1.week %>
          due_at: <%= due_last_monday + 4.days %>
          closes_at: <%= closes_next_monday + 4.days %>
        - period:
            name: 2nd
          opens_at: <%= open_last_monday - 1.week %>
          due_at: <%= due_last_monday + 4.days %>
          closes_at: <%= closes_next_monday + 4.days %>
