<% status ||= nil %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Job ID</th>
      <th>Status</th>
      <th>Link to Archive</th>
    </tr>
  </thead>
  <tbody>
  <% jobs.each do |job| %>
    <% ecosystem_import_url = (job.data || {})['ecosystem_import_url'] %>

    <tr>
      <td><%= link_to(job.id, job_path_proc.call(job)) %></td>
      <td><%= status || job.state.name.capitalize %></td>
      <td><%= link_to(ecosystem_import_url, ecosystem_import_url, target: '_blank') \
                if ecosystem_import_url.present? %></td>
    </tr>
  <% end %>
</table>

<p><strong>Note:</strong> This table does not automatically refresh.</p>
