<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>OpenStax Tutor : Administration</title>
    <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="admin">

    <nav class="navbar navbar-default <%= 'production' if is_real_production_site? %>">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/admin">Tutor Admin Console</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Course Organization<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Catalog Offerings', admin_catalog_offerings_path %></li>
                <li><%= link_to 'Courses', admin_courses_path %></li>
                <li><%= link_to 'Schools', admin_schools_path %></li>
                <li><%= link_to 'Districts', admin_districts_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Content<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Tags', admin_tags_path %></li>
                <li><%= link_to 'Ecosystems', admin_ecosystems_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Legal<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Terms', fine_print_path %></li>
                <li><%= link_to 'Targeted Contracts', admin_targeted_contracts_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stats<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Courses', courses_admin_stats_path %></li>
                <li><%= link_to 'Excluded Exercises', excluded_exercises_admin_stats_path %></li>
                <li><%= link_to 'Concept Coach', concept_coach_admin_stats_path %></li>
              </ul>
            </li>

            <li><%= link_to 'Users', admin_users_path %></li>
            <li><%= link_to 'Jobs', admin_jobs_path %></li>

            <li><%= link_to 'Research Data', admin_research_data_path %></li>

            <li><%= link_to 'Salesforce', admin_salesforce_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">System Setting<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Settings', admin_rails_settings_ui_path %></li>
                <li><%= link_to 'Notifications', admin_notifications_path %></li>
                <% if Timecop.enabled? %>
                  <li><%= link_to 'Time Travel', admin_timecop_path %></li>
                <% end %>
              </ul>
            </li>

          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="/dashboard">Main Dashboard</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Sign out!', openstax_accounts.logout_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
      <div class="page-header">
        <% @page_header = "Global Settings" if current_page?(admin_rails_settings_ui.settings_url) %>
        <h1><%= @page_header %></h1>
      </div>

      <%= render 'layouts/flash_messages' %>

      <%= yield %>
    </div>

  </body>
</html>
