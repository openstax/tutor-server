<div id='offering_<%= offering.id %>' class='underlined-spaced-row'>
  <div class="form-group">
    <%= form.label :number %>
    <%= form.number_field :number, min: "1", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', style: 'min-width: 300px' %>
  </div>
  <div class="form-group">
    <%= form.label :salesforce_book_name %>
    <% if @salesforce_book_names.blank? %>
      <%= form.text_field :salesforce_book_name, class: 'form-control' %>
    <% else %>
      <%= form.select :salesforce_book_name, @salesforce_book_names,
                      { include_blank: true }, class: 'form-control' %>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :appearance_code %>
    <%= form.text_field :appearance_code, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :default_course_name %>
    <%= form.text_field :default_course_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :os_book_id, 'OpenStax Book Identifier' %>
    <%= form.text_field :os_book_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label "Ecosystem" %>
    <%= form.collection_select :content_ecosystem_id,
       @ecosystems, :id, :unique_title, { include_blank: true }, class: 'form-control' %>
    <div class="checkbox">
      <label>
        <%= check_box_tag :update_courses, '1', true, class: 'form-control' %>
        <span class="checkbox-label">Update ecosystems for associated courses?</span>
      </label>
    </div>
    <p class="help-block">
      Associated courses will be automatically updated
      to the above ecosystem if this checkbox is selected
    </p>
  </div>
  <div class="checkbox">
    <label>
      <%= form.check_box :does_cost, class: 'form-control' %>
      <span class="checkbox-label">Costs students?</span>
    </label>
  </div>
  <div class="checkbox">
    <label>
      <%= form.check_box :is_available, class: 'form-control' %>
      <span class="checkbox-label">Available for real courses?</span>
    </label>
  </div>
  <div class="checkbox">
    <label>
      <%= form.check_box :is_preview_available, class: 'form-control' %>
      <span class="checkbox-label">Available for preview courses?</span>
    </label>
  </div>
  <div class="form-group">
    <%= form.label :preview_message, 'Message displayed when a preview course is created' %>
    <%= form.text_field :preview_message, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary', value: 'Save' %>

  <%= link_to 'Cancel', admin_catalog_offerings_path, class: 'btn' %>
</div>
