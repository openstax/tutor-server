<% method ||= :post %>

<%= lev_form_for :user, url: url, method: method do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <% if @user.nil? %>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  <% end %>

  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div>
    <%= f.label :roles %>
    <%= check_box_tag :roles_teacher, :teacher, checked = @roles.try(:include?, 'teacher') %>
    <%= label_tag :roles_teacher, 'Teacher' %>
    <%= check_box_tag :roles_student, :student, checked = @roles.try(:include?, 'student') %>
    <%= label_tag :roles_student, 'Student' %>
  </div>

  <div>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
