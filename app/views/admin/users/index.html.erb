<%= link_to 'Create user', new_admin_user_path %>

<%= form_tag '', method: :get do %>
  <%= text_field_tag :search_term, params[:search_term] %>
  <%= submit_tag 'Search User' %>
<% end %>

<% if params[:search_term].present? && @users.empty? %>
  <p>No users found.</p>
<% end %>

<% if @users.present? %>
  <%= will_paginate @users %>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.items.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td>
              <%= link_to 'edit', edit_admin_user_path(user.id) %> |
              <%= link_to 'sign in as', become_admin_user_path(user.account_id),
                                        method: :post %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
<% end %>
