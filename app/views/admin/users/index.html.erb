<%= link_to 'Create user', new_admin_user_path %>

<%= form_tag '', method: :get do %>
  <%= text_field_tag :search_term, params[:search_term] %>
  <%= submit_tag 'Search User' %>
<% end %>

<% if params[:search_term].present? && @user_search.empty? %>
  <p>No users found.</p>
<% end %>

<% if @user_search.present? %>

  <%
    pagination = will_paginate(
      WillPaginate::Collection.create(params[:page] || 1, @per_page, @user_search.total_items) do |pager|
        pager.replace @user_search.items
      end
    )
  %>

  <%= pagination %>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_search.items.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.full_name %></td>
          <td>
              <%= link_to 'edit', edit_admin_user_path(user.id) %> |
              <%= link_to 'sign in as', become_admin_user_path(user.account_id),
                                        method: :post %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= pagination %>

<% end %>
