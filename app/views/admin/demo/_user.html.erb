<%
  # Clients of this partial must provide the following variable:
  # fields
  # Additionally, they may override the following variables:
  name ||= 'User'
  options ||= {}
%>

<div class="form-group">
  <%= fields.label :username %>
  <%=
    fields.text_field :username, options.merge(
      class: 'form-control', required: true, placeholder: "Required (unless #{name} is removed)"
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :full_name %>
  <%=
    fields.text_field :full_name, options.merge(
      class: 'form-control', placeholder: 'Derived from (First name and Last name) or Username'
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :first_name %>
  <%=
    fields.text_field :first_name, options.merge(
      class: 'form-control', placeholder: 'Derived from Full name'
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :last_name %>
  <%= fields.text_field :last_name, options.merge(
    class: 'form-control', placeholder: 'Derived from Full name'
  ) %>
</div>
