<%#
  Clients of this partial must provide the following variable:
  form
%>

<h3>Catalog Offering</h3>

<%= form.fields 'catalog_offering', model: form.object.catalog_offering do |fields| %>
  <div class="form-group">
    <%= fields.label :id %>
    <%=
      fields.text_field(
        :id,
        class: 'form-control',
        placeholder: 'One of either id or title is required (unless Catalog offering is removed)'
      )
    %>
  </div>

  <div class="form-group">
    <%= fields.label :title %>
    <%=
      fields.text_field(
        :title,
        class: 'form-control',
        placeholder: 'One of either id or title is required (unless Catalog offering is removed)'
      )
    %>
  </div>
<% end %>

<%= render partial: File.join('admin', 'demo', 'course'), locals: { form: form } %>

<div class="form-group">
  <%= form.label :is_college %>
  <%=
    form.select :is_college,
                [ [ 'Unchanged/Yes', '' ], [ 'Yes', '1' ], [ 'No', '0' ] ],
                {},
                class: 'form-control'
  %>
</div>

<div class="form-group">
  <%= form.label :term %>
  <%=
    form.select(
      :term,
      [ [ 'Unchanged/Demo', '' ] ] + CourseProfile::Models::Course.terms.keys.map do |key|
        [key.humanize, key]
      end,
      {},
      class: 'form-control'
    )
  %>
</div>

<div class="form-group">
  <%= form.label :year %>
  <%=
    form.number_field :year, class: 'form-control', placeholder: Time.zone.now.year.to_s, min: 2000
  %>
</div>

<div class="form-group">
  <%= form.label :starts_at %>
  <%=
    form.text_field :starts_at, class: 'form-control', placeholder: 'Derived from Term and Year'
  %>
</div>

<div class="form-group">
  <%= form.label :ends_at %>
  <%= form.text_field :ends_at, class: 'form-control', placeholder: 'Derived from Term and Year' %>
</div>

<%= render partial: 'form_collection', locals: { form: form, scope: :teachers, partial: 'user' } %>

<%=
  render partial: 'form_collection', locals: {
    form: form, scope: :periods, partial: File.join('admin', 'demo', 'course', 'period')
  }
%>
