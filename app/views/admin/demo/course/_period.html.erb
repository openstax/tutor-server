<%
  # Clients of this partial must provide the following variable:
  # fields
  # Additionally, they may override the following variable:
  options ||= {}
%>

<div class="form-group">
  <%= fields.label :name %>
  <%=
    fields.text_field :name, options.merge(
      class: 'form-control', required: true, placeholder: 'Required (unless User is removed)'
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :enrollment_code %>
  <%= fields.text_field :enrollment_code, options.merge(class: 'form-control') %>
</div>

<%=
  render partial: 'form_collection', locals: {
    form: fields, scope: :students, partial: 'user', options: options
  }
%>
