<%
  # Clients of this partial must provide the following variable:
  # form
  # Additionally, they may override the following variables:
  options ||= {}
%>

<%= form.fields 'period', model: form.object.period do |fields| %>
  <%=
    render partial: File.join('admin', 'demo', 'period'), locals: { form: fields, options: options }
  %>
<% end %>

<div class="form-group">
  <%= form.label :opens_at %>
  <%=
    form.text_field :opens_at, options.merge(
      class: 'form-control', required: true, placeholder: "Required (unless Period is removed)"
    )
  %>
</div>

<div class="form-group">
  <%= form.label :due_at %>
  <%=
    form.text_field :due_at, options.merge(
      class: 'form-control', required: true, placeholder: "Required (unless Period is removed)"
    )
  %>
</div>
