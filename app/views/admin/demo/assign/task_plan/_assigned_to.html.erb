<%
  # Clients of this partial must provide the following variable:
  # fields
  # Additionally, they may override the following variables:
  name ||= 'Period'
  options ||= {}
%>

<%= fields.fields 'period', model: fields.object.period do |fields| %>
  <div class="form-group">
    <%= fields.label :name, 'Period Name' %>
    <%=
      fields.text_field :name, options.merge(
        class: 'form-control', required: true, placeholder: "Required (unless #{name} is removed)"
      )
    %>
  </div>
<% end %>

<div class="form-group">
  <%= fields.label :opens_at %>
  <%=
    fields.text_field :opens_at, options.merge(
      class: 'form-control', required: true, placeholder: "Required (unless #{name} is removed)"
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :due_at %>
  <%=
    fields.text_field :due_at, options.merge(
      class: 'form-control', required: true, placeholder: "Required (unless #{name} is removed)"
    )
  %>
</div>
