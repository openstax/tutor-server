<%
  # Clients of this partial must provide the following variable:
  # form
  # Additionally, they may override the following variables:
  options ||= {}
%>

<div class="form-group">
  <%= form.label :chapter %>
  <%=
    form.number_field :chapter, options.merge(
      class: 'form-control',
      required: true,
      placeholder: "Required (unless Book location is removed)",
      min: 1
    )
  %>
</div>

<div class="form-group">
  <%= form.label :section %>
  <%=
    form.number_field :section, options.merge(
      class: 'form-control',
      required: true,
      placeholder: "Required (unless Book location is removed)",
      min: 0
    )
  %>
</div>
