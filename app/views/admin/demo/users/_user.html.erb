<%
  # Clients of this partial must provide the following variable:
  # form
  # Additionally, they may override the following variables:
  options ||= {}
  name ||= 'User'
%>

<%=
  render partial: File.join('admin', 'demo', 'user'),
         locals: { form: form, options: options, name: name }
%>

<div class="form-group">
  <%= form.label :full_name %>
  <%=
    form.text_field :full_name, options.merge(
      class: 'form-control', placeholder: 'Derived from (First name and Last name) or Username'
    )
  %>
</div>

<div class="form-group">
  <%= form.label :first_name %>
  <%=
    form.text_field :first_name, options.merge(
      class: 'form-control', placeholder: 'Derived from Full name'
    )
  %>
</div>

<div class="form-group">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, options.merge(
    class: 'form-control', placeholder: 'Derived from Full name'
  ) %>
</div>
