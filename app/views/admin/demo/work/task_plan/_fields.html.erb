<%
  # Clients of this partial must provide the following variable:
  # fields
  # Additionally, they may override the following variables:
  name ||= 'Task plan'
  options ||= {}
%>

<div class="form-group">
  <%= fields.label :id %>
  <%=
    fields.text_field :id, options.merge(
      class: 'form-control',
      placeholder: "One of either id or title is required (unless #{name} is removed)"
    )
  %>
</div>

<div class="form-group">
  <%= fields.label :title %>
  <%=
    fields.text_field :title, options.merge(
      class: 'form-control',
      placeholder: "One of either id or title is required (unless #{name} is removed)"
    )
  %>
</div>

<%=
  render partial: 'form_collection', locals: {
    form: fields, scope: :tasks, partial: File.join('admin', 'demo', 'work', 'task_plan', 'task')
  }
%>
