<%#
  Clients of this partial must provide the following variable:
  form
%>

<h3>Course</h3>

<%= form.fields 'course', model: form.object.course do |fields| %>
  <div class="form-group">
    <%= fields.label :id %>
    <%=
      fields.text_field(
        :id,
        class: 'form-control',
        placeholder: 'One of either id or name is required (unless Course is removed)'
      )
    %>
  </div>

  <div class="form-group">
    <%= fields.label :name %>
    <%=
      fields.text_field(
        :name,
        class: 'form-control',
        placeholder: 'One of either id or name is required (unless Course is removed)'
      )
    %>
  </div>
<% end %>
